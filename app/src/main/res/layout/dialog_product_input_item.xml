<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp">

    <TextView
        android:id="@+id/input_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:text="保额"
        android:textColor="#ff2d2d2d"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/dialog_input_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/grey_text_bg"
        android:drawableRight="@drawable/ic_bottom_select"
        android:drawablePadding="20dp"
        android:hint="保额"
        android:maxLength="8"
        android:paddingLeft="9dp"
        android:paddingTop="5dp"
        android:paddingRight="9dp"
        android:paddingBottom="5dp"
        android:textColor="#ff8d8d8d"
        android:textSize="14sp" />

    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/input_flex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_toRightOf="@id/input_label"
        app:flexDirection="row"
        app:flexWrap="wrap"
        app:justifyContent="flex_end" />

</RelativeLayout>