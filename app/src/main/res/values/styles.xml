<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="animate_dialog">
        <item name="android:windowEnterAnimation">@anim/anim_dialog_in</item>
        <item name="android:windowExitAnimation">@anim/anim_dialog_out</item>
    </style>

    <style name="AppTheme.Launcher" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/launch_screen</item>
        <item name="android:navigationBarColor">@color/app_backgroud</item>
        <item name="android:statusBarColor">@color/app_backgroud</item>
    </style>
</resources>